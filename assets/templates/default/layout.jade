html
    head
        title #{title}
        
        link(rel='stylesheet', href='#{clientpath}resources/deckem.css')
        link(rel='stylesheet', href='#{clientpath}themes/#{theme}.css')
        link(rel='stylesheet', href='#{clientpath}resources/custom.css')
        
        - stylesheets.forEach(function(stylesheet) {
          link(href='#{stylesheet}', rel='stylesheet')
        - })
    body
        div.deckem.drop-shadow.curved.curved-vt-2
            div.deck-container
                !{deck}

                p.deck-status
                    span.deck-status-current
                    span /
                    span.deck-status-total
                    
        script(src='#{clientpath}resources/deckem.js')

        - includes.forEach(function(include) {
          script(src=include)
        - })
        
        - scripts.forEach(function(pluginScript) {
          script= pluginScript
        - })
        
        script(src='#{clientpath}resources/bridge-#{bridge}.js')
   